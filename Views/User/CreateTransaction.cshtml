@model eGreeting.Models.Transaction

@{
    ViewBag.Title = "Select Card";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Modify Card</h2>
@if (Model != null)
{
    <div class="form-group" style="text-align: center;">
        <img src="~/ImageCard/@Model.ImageNameTrans" alt="@Model.ImageNameTrans" style="width:50%" id="Image" />
    </div>
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Username)
        @Html.HiddenFor(model => model.NameCard)
        @Html.HiddenFor(model => model.ImageNameTrans)



        @*<div class="form-group">
            @Html.LabelFor(model => model.Receiver, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Receiver, eGreeting.Services.EmailListServices.GetEmail(Model.Username), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Receiver, "", new { @class = "text-danger" })
            </div>
        </div>*@

        <div class="form-group">
            @Html.LabelFor(model => model.Subject, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Content, new { @class = "form-control", @rows = "10" })
                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-warning" })
                <input type="submit" value="Send" class="btn btn-default" style="float:right !important" />
            </div>
        </div>
    </div>
}

<script>
    function SendCard() {
        if ($("#Username").val() === "" || $("#NameCard").val() === "" || $("#ImageNameTrans").val() === "" || $("#Receiver").val() === "" || $("#Subject").val() === "" || $("#Content").val() === "")
        {
            Swal.fire('Error', 'Please fill out fields', 'warning');
            return false;
        }
        Swal.fire({
            title: 'Are you sure?',
            text: "Do you want send this card ?",
            type: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            confirmButtonText: 'Yes, Send it!',
            cancelButtonColor: '#d33'
        }).then((result) => {
            if (result.value) {
                var obj = {};
                obj.Username = $("#Username").val();
                obj.NameCard = $("#NameCard").val();
                obj.ImageNameTrans = $("#ImageNameTrans").val();
                obj.Receiver = $("#Receiver").val();
                obj.Subject = $("#Subject").val();
                obj.Content = $("#Content").val();

                $.ajax({
                    url: '@Url.Action("CreateTrans","User")',
                    type: "POST",
                    data: obj,
                    success: function (res) {
                        if (res) {
                            Swal.fire({
                                title: 'Send success',
                                text: 'Successfully Send!',
                                type: 'success'
                            }).then(() => {
                                location.reload();
                            });
                        }
                        else
                        {
                            Swal.fire({
                                title: 'Send failed',
                                text: 'An error occurred while Sending!',
                                type: 'error'
                            })
                        }
                    }
                })
            }
        })
    };
</script>
