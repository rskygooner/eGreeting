@model eGreeting.Models.User

@{
    ViewBag.Title = "ChangeSubscribeSend";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Change Subscribe Send</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.UserName)


        <div class="form-group">
            <label>You are Subscribing To Send Card. <br />
            <b>NOTE:</b> If you UnSubcribe, you will cannot send card.</label>
            <div class="col-md-10">
                <div class="checkbox">
                    <input type="checkbox" name="IsSubcribeSend" value="false" hidden/>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Back to List", "Index", null, new { @class="btn btn-primary" })
                <input type="submit" value="UnSubscribe" class="btn btn-warning" />
            </div>
        </div>
    </div>
}

