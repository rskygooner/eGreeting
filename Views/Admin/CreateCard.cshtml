@model eGreeting.Models.Card

@{
    ViewBag.Title = "Create New Card";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<h2>Create New Card</h2>


@using (Html.BeginForm("CreateCard", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Card</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.NameCard, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NameCard, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NameCard, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Category, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Category, eGreeting.Services.CardServices.GetCategoryList(), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ImageName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="file" id="file" class="form-control" required />
                <br />
                <center><img class="img-responsive" width="200" id="imgPreview" /></center>
                @Html.ValidationMessageFor(model => model.ImageName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Back to List", "ManageCard", null, new { @class="btn btn-default"})
                <input type="submit" id="submit" value="Create" class="btn btn-primary" style="float:right"/>
            </div>
        </div>
    </div>
}

<div>
    
</div>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>


<script>
    $('#file').on("change", function () {
        if (this.files[0].size > 2097152) {
            Swal.fire("Error", "File size cannot bigger than 2 MB. Please choose again !", "error").then((result) => { location.reload();});
            return false;
        }
        //alert(this.files[0].size);
        if (this.files && this.files[0]) {
            var fr = new FileReader();
            fr.onload = function (e) {
                $("#imgPreview").attr("src", e.target.result);
            }
            fr.readAsDataURL(this.files[0]);
        }
    })
</script>
